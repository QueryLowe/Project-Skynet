<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin" tools:context = ".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_alignStart="@+id/textView"
        android:text="Please enter the follwoing information"
        android:textColor="#ff7aff24"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="-74sp"
        android:layout_toStartOf="@+id/editText2"
        android:text="Height: "
        android:textColor="#ff7aff24"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="-74sp"
        android:layout_toStartOf="@+id/editText2"
        android:text="Weight: "
        android:textColor="#ff7aff24"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="-44sp"
        android:layout_toStartOf="@+id/editText2"
        android:text="Age: "
        android:textColor="#ff7aff24"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="-74sp"
        android:layout_toStartOf="@+id/editText2"
        android:text="Gender: "
        android:textColor="#ff7aff24"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="-74sp"
        android:layout_toStartOf="@+id/editText2"
        android:text="Goal: "
        android:textColor="#ff7aff24"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/user_gender"
        android:layout_width="106dp"
        android:layout_height="29dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="-35dp"
        android:layout_marginLeft="103dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="74sp"
        android:layout_marginLeft="74sp"
        android:layout_marginTop="30sp"
        android:hint="Please enter your height here"
        android:textColorHint="#ffff299f" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="74sp"
        android:layout_marginLeft="74sp"
        android:layout_marginTop="70sp"
        android:hint="Please enter your Weight here"
        android:textColorHint="#ffff299f" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="74sp"
        android:layout_marginLeft="74sp"
        android:layout_marginTop="110sp"
        android:hint="Please enter your Age here"
        android:textColorHint="#ffff299f" />

