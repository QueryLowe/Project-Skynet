<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin" tools:context = ".UserInfoActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_enter_the_follwoing_information"
        android:textColor="#ff7aff24"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="40dp"
        android:layout_marginEnd="-74sp"
        android:text="@string/height"
        android:textColor="#ff7aff24"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="80dp"
        android:layout_marginEnd="-74sp"
        android:text="@string/weight"
        android:textColor="#ff7aff24"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="-44sp"
        android:text="@string/age"
        android:textColor="#ff7aff24"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="-74sp"
        android:text="@string/gender"
        android:textColor="#ff7aff24"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="-74sp"
        android:text="@string/goal"
        android:textColor="#ff7aff24"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/user_gender"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="-159dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/user_goal"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/textview2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="-159dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dialog"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editText_height"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="74sp"
        android:layout_marginTop="30sp"
        android:hint="@string/please_enter_your_height_here"
        android:inputType="number"
        android:textColorHint="#ffff299f" />

    <EditText
        android:id="@+id/editText_weight"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="74sp"
        android:layout_marginTop="70sp"
        android:hint="@string/please_enter_your_weight_here"
        android:inputType="number"
        android:textColorHint="#ffff299f" />

    <EditText
        android:id="@+id/editText_age"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="74sp"
        android:layout_marginTop="110sp"
        android:hint="@string/please_enter_your_age_here"
        android:inputType="number"
        android:textColorHint="#ffff299f" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginTop="300sp"
        android:text="@string/confirm" />

</RelativeLayout>