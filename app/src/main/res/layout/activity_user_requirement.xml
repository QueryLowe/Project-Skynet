<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin" tools:context = ".UserRequirementActivity">

    <TextView
        android:id="@+id/req_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your expectations"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_time_achieve_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="80dp"
        android:layout_marginEnd="-74sp"
        android:text="Time to achieve Goal: "
        android:textColor="#ff7aff24"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_sessions_in_a_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="-44sp"
        android:text="Sessions in a Week: "
        android:textColor="#ff7aff24"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText_time_achieve_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="219dp"
        android:layout_marginTop="70sp"
        android:hint="Numeric, in weeks"
        android:inputType="number"
        android:textColorHint="#ffff299f" />

    <EditText
        android:id="@+id/editText_sessions_in_a_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="220dp"
        android:layout_marginTop="110sp"
        android:hint="Numeric"
        android:inputType="number"
        android:textColorHint="#ffff299f" />

    <Button
        android:id="@+id/btn_user_req_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginTop="300sp"
        android:text="@string/confirm" />

</RelativeLayout>