<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00AA7D7D"
    android:backgroundTintMode="add"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".UserInfoActivity">

    <TextView
        android:id="@+id/test_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/test_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="273dp"
        android:gravity="center"
        android:text="dummy"
        android:textColor="#a9cbd1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:layout_marginBottom="65dp"
        android:text="Your fitness test will be: "
        android:textColor="#3F51B5"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fitness_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="198dp"
        android:text="Fitness Test"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/start_test"
        style="@android:style/Widget.Button"
        android:layout_width="170dp"

        android:layout_height="50dp"
        android:layout_alignStart="@+id/otf_state_Fitness_Test"
        android:layout_alignTop="@+id/otf_state_Fitness_Test"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-26dp"
        android:layout_marginTop="51dp"
        android:backgroundTint="#5FD50B"
        android:backgroundTintMode="src_atop"
        android:foregroundTint="#0CCF12"
        android:foregroundTintMode="add"
        android:text="@string/start_fitness_test"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/otf_state_Fitness_Test"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fitness_header"
        android:layout_marginEnd="-126dp"
        android:layout_marginBottom="-331dp"
        android:layout_toStartOf="@+id/fitness_header"
        android:text="@string/dummy_otf_state" />

    <Button
        android:id="@+id/fitness_test_cancel"
        style="@android:style/Widget.Button"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/start_test"
        android:layout_alignEnd="@+id/start_test"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="525dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="#FF0000"
        android:shadowColor="#00534C4C"
        android:backgroundTintMode="src_atop"
        android:foregroundTint="#0CCF12"
        android:foregroundTintMode="add"
        android:shadowDx="5"
        android:shadowDy="5"
        android:text="Cancel"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/text_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/fitness_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="58dp"
        android:gravity="center"
        android:text="You will now be tested on your current fitness level to create a personalized workout. Please click on the green button below to start. If you feel exhausted, please click on the red button below to stop the test."
        android:textColor="#0BA035"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/test_name"
        android:layout_width="172dp"
        android:layout_height="39dp"
        android:layout_alignTop="@+id/text_3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="37dp"
        android:layout_marginRight="-23dp"
        android:drawableTop="@color/colorAccent"
        android:gravity="center"
        android:text="dummy text"
        android:textColor="#a9cbd1"
        android:textSize="20sp" />

</RelativeLayout>